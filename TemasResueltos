
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;


namespace PromedioTres
{
    static void main(string[] args)
    {
        /// Calculo de perimetro

        //Variables

        string dato = "";
        double numeroUno = 0.0;
        double numeroDos = 0.0;
        double numeroTres = 0.0;
        double promedio = 0.0;

        //Obtencion de datos

        Console.WriteLine("Ingresa el numero uno:");
        dato = Console.ReadLine();
        numeroUno = Convert.ToDouble(dato);

        //Obtencion de datos

        Console.WriteLine("Ingresa el numero dos:");
        dato = Console.ReadLine();
        numeroDos = Convert.ToDouble(dato);

        //Obtencion de datos

        Console.WriteLine("Ingresa el numero tres:");
        dato = Console.ReadLine();
        numeroTres = Convert.ToDouble(dato);

        //Conversion a dolar

        promedio = (numeroUno + numeroDos + numeroTres) / 3;
        Console.WriteLine("El promedio de los numeros {0}, {1}, {2} es {3}" numeroUno, numeroDos, numeroTres, promedio)
    }
}


