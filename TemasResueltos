
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;


namespace Ejercisios
{
    static void main(string[] args)
    {
        /// Calculo de perimetro

        //Variables

        string dato = "";
        double ladoA = 0.0;
        double ladoB = 0.0;
        double area = 0.0;
        double perimetro = 0.0;

        //Obtencion de datos

        Console.WriteLine("Ingresa el valor del lado A");
        dato = Console.ReadLine();
        ladoA = Convert.ToDouble(dato);
        Console.WriteLine("El lado A es", ladoA)

        //Obtencion de datos

        Console.WriteLine("Ingresa el valor del lado B");
        dato = Console.ReadLine();
        ladoB = Convert.ToDouble(dato);
        Console.WriteLine("El lado B es", ladoB)

        //Calculo de area 

        area = ladoA * ladoB;
        Console.WriteLine("El area del rectangulo de lados {0}, {1} es:",ladoA, ladoB, area)

        //Calculo de perimetro

        perimetro = 2 (ladoA + ladoB);
        Console.WriteLine("El perimetro del rectangulo de lados {0}, {1} es:", ladoA, ladoB, area)

    }
}
