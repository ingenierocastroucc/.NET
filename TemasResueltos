using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;


namespace AreasCasa
{
    static void main(string[] args)
    {

        /// Area de casa con tres habitaciones

        //Variables

        // habitacion uno
        double ancho = 8.03;
        double largo = 4.5;
        double area = 0.0;
        double ancho2 = 9.03;
        double largo2 = 7.5;
        double area2 = 0.0;
        double ancho3 = 6.00;
        double largo3 = 2.0;
        double area3 = 0.0;

        double areatotal = 0.0;

        //Calculos

        area = (ancho * largo);

        //Areas

        Console.WriteLine("El area de la habitacion uno es {0} * {1} = {2} ", ancho, largo, area)

        //Calculos

        area2 = (ancho2 * largo2);

        //Areas

        Console.WriteLine("El area de la habitacion uno es {0} * {1} = {2} ", ancho2, largo2, area2)

        //Calculos

        area3 = (ancho3 * largo3);

        //Areas

        Console.WriteLine("El area de la habitacion uno es {0} * {1} = {2} ", ancho3, largo3, area3)

        //Calculos

        areatotal = (area + area2 + area3);

        //Areas

        Console.WriteLine("El area total de la casa es = {0} ", areatotal)

    }
}
