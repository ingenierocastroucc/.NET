
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;


namespace Conversion
{
    static void main(string[] args)
    {
        // Conversion valores

        //Variables

        string dato = "";
        double peso = 0.0;
        double valorConversion = 0.0;
        double dolar = 0.0;

        //Obtencion de datos

        Console.WriteLine("Ingresa el valor en pesos $");
        dato = Console.ReadLine();
        peso = Convert.ToDouble(dato);

        //Obtencion de datos

        Console.WriteLine("Ingresa el valor de conversion %");
        dato = Console.ReadLine();
        valorConversion = Convert.ToDouble(dato);

        //Conversion a dolar

        dolar = peso / valorConversion;
        Console.WriteLine("Esta cantidad en pesos: {0} representa esta cantidad en dolares: {1}", peso, dolar)
    }
}

