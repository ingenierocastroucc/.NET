using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;


namespace CondicionalesBloques
{
    static void main(string[] args)
    {
        /// Operaciones aritmeticas con condicinales

        //Variables
        string dato = "";
        double valorMetros = 0.0;
        double valorPies = 0.0;
        int tipoDeCaluculo = "";
        double resultado = 0.0;

        //Obtencion de datos

        Console.WriteLine("Ingresa el tipo de calculo que va a realizar, selleccionando el valor de 1 para metros y 2 para pies");
        dato = Console.ReadLine();
        tipoDeCaluculo = Convert.ToInt32(dato);

        //Obtencion de datos
        if (tipoDeCaluculo == "1")
        {
            Console.WriteLine("Ingresa la cantidad en metros");
            dato = Console.ReadLine();
            valorMetros = Convert.ToDouble(dato);

            //calculo
            resultado = (valorMetros * 3.28) / 1
            Console.WriteLine("El valor de conversion {0} a pies es de: {1}", valorMetros, resultado)
        }

        //Obtencion de datos
        if (tipoDeCaluculo == "2")
        {
            Console.WriteLine("Ingresa la cantidad en metros");
            dato = Console.ReadLine();
            valorPies = Convert.ToString(dato);

            //calculo
            resultado = valorPies / 3.28
            Console.WriteLine("El valor de conversion {0} a metros es de: {1}", valorPies, resultado)
        }
        else
        {
            Console.WriteLine("Debe ingresar un tipo de calculo valido")
        }
    }
}
