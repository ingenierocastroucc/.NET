
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;


namespace SwitchEjercisios
{
    static void main(string[] args)
    {
        /// ciclo for 

        //Variables
        string dato = "";
        int n = 0;
        int cantidad = 0;
        double numero = 0.0;
        double calculo = 0.0;
        double resultado = 0.0;

        //Obtencion de datos

        Console.WriteLine("Ingresa la cantidad de numeros a ingresar");
        dato = Console.ReadLine();
        cantidad = Convert.ToInt32(dato);

        //Promedio
        for (n = 0; n < cantidad; n++) {
            Console.WriteLine("Ingresa el numero");
            dato = Console.ReadLine();
            numero = Convert.ToDouble(dato);

            calculo += numero;
        }
        resultado = calculo / cantidad;
        Console.WriteLine("El resultado del promedio es: {0}", resultado)
    }
}
