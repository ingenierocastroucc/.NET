using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;


namespace SwitchEjercisios
{
    static void main(string[] args)
    {
        /// Uso del switch y el if

        //Variables
        string dato = "";
        double valor = 0.0;
        int conversion = 0;
        double resultado = 0.0;

        //Obtencion de datos

        Console.WriteLine("Ingresa el valor a convertir");
        dato = Console.ReadLine();
        valor = Convert.ToDouble(dato);

        //Obtencion de datos

        Console.WriteLine("Ingrese el tipo de conversion a: Millas (1) Kilometros (2)");
        dato = Console.ReadLine();
        conversion = Convert.ToInt32(dato);

        //Condicionales

        switch (conversion) {

            //Determina si es una suma
            case 1:
                resultado = (valor / 1.609)
                break;
            //Determina si es una resta
            case 2:
                resultado = (valor * 1.609)
                break;
            default:
                Console.WriteLine("Debe ingresar una conversion valida");
                break;
        }
        if (conversion == 1 && resultado > 0) {
            Console.WriteLine("El resultado de la conversion de kilometros a millas es: {0}", resultado)
        }
        else if (conversion == 2 && resultado > 0)
        {
            Console.WriteLine("El resultado de la conversion de millas a kilometros es: {0}", resultado)
        }
        else 
        {
            Console.WriteLine("Los valores ingresado estan erroneos, verifique e intente nuevamente")
        }
    }
}
